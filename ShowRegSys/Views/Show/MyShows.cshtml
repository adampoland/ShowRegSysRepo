@model IEnumerable<ShowRegSys.Models.Show>

@{
    ViewBag.Title = "Moje wystawy";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj wystawę", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Ranga
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organizer.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rank.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organizer.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ShowID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ShowID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ShowID }) |
            @Html.ActionLink("Zdjęcia", "ImageAdmin", "Image", new { id = item.ShowID }, null) |
            @Html.ActionLink("Katalog", "Catalog", new { id = item.ShowID })
        </td>
    </tr>   
}

</table>
