@model ShowRegSys.Models.Show

@{
    ViewBag.Title = "Edycja wystawy";
}

<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Show</legend>

        @Html.HiddenFor(model => model.ShowID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Rank.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("RankID", String.Empty)
            @Html.ValidationMessageFor(model => model.Rank)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Organizer.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownList("OrganizerID", String.Empty)
            @Html.ValidationMessageFor(model => model.Organizer)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy wystaw", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
