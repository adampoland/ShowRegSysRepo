@model IEnumerable<ShowRegSys.Models.Show>

@{
    ViewBag.Title = "Wystawy";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Ranga
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organizer.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rank.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organizer.Name)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ShowID }) |
            @Html.ActionLink("Galeria", "ImageList", "Image", new { showID = item.ShowID }, null) 
        </td>
    </tr>
}

</table>
